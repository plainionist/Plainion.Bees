<?xml version="1.0" encoding="utf-8" ?>
<Script xmlns="http://github.com/ronin4net/plainion/appfw/shell" 
        xmlns:s="clr-namespace:Plainion.Scripts.XamlEdit;assembly=Plainion.Scripts" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Script.Option>-XamlEdit</Script.Option>
    <Script.Description>Start Xaml editor</Script.Description>
    <s:XamlEditor>
        <s:XamlEditor.AssemblyPatterns>
            <s:Include Value="\bin\Plainion\Plainion\*.dll"/>
            <s:Include Value="\bin\Plainion.Bees\*.dll"/>
        </s:XamlEditor.AssemblyPatterns>
    </s:XamlEditor>
</Script>
    