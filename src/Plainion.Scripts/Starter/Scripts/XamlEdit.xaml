<?xml version="1.0" encoding="utf-8" ?>
<Script xmlns="http://Plainion.codeplex.com/shell/" 
        xmlns:s="clr-namespace:Plainion.Scripts.XamlEdit;assembly=Plainion.Scripts" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Script.Option>-XamlEdit</Script.Option>
    <Script.Description>Start Xaml editor</Script.Description>
    <s:XamlEditor>
        <s:XamlEditor.AssemblyPatterns>
            <s:Include Value="\Releases\Plainion.Net\Release\Plainion.*.dll"/>
            <s:Exclude Value="\Releases\Plainion.Net\Release\*_uTest.dll"/>
            <s:Exclude Value="\Releases\Plainion.Net\Release\*_iTest.dll"/>
        </s:XamlEditor.AssemblyPatterns>
    </s:XamlEditor>
</Script>
    